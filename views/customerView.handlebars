{{!------------------------------ choose customer dropdown section------------------------------------}}
{{!-- <div class="jumbotron customer-select"> --}}
<br>
<div class="row">

  <!-- Choose a customer dropdown -->
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text cust-btn" for="customerNames">Customers</label>
    </div>
    <select class="custom-select" id="customerNames">
      <option selected> Select ...</option>

    </select>
  </div>

  <!-- Button trigger modal -  add new client -->
  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addClientModal">
    Add New Client
  </button>

  <!-- Button trigger modal - add new wine -->
  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addClientWineModal">
    Add Client Wine
  </button>

  <!-- Button trigger modal - place order -->
  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#placeOrderModal">
    Place Order
  </button>

</div>

<!-- Modal to add new client-->
<div class="modal fade" id="addClientModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> New Client Input</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Client Name:<br>
        <input type="text" id="clientName" value="">
        <br>
        Primary Contact:<br>
        <input type="text" id="primContact" value="">
        <br>
        Phone Number:<br>
        <input type="text" id="phNumber" value="">
        <br>
        E-mail Address:<br>
        <input type="text" id="emailAddress" value="">
        <br>
        Street:<br>
        <input type="text" id="street" value="">
        <br>
        City:<br>
        <input type="text" id="city" value="">
        <br>
        State:<br>
        <input type="text" id="state" value="">
        <br>
        Zip Code:<br>
        <input type="text" id="zipCode" value="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="newClientSubmit" class="btn btn-primary">Add Client</button>
      </div>
    </div>
  </div>
</div>
<br>
<!-- Modal to add new client wine-->
<div class="modal fade" id="addClientWineModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add New Client Wine</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
          Account Name:<br>
          <input type="text" id="newAccountName" value="">
        </div>

        <div>
          Vintage:<br>
          <input type="text" id="newVintage" value="">
        </div>

        <div>
          Varietal:<br>
          <select class="varietalDropdown" id="varietalDropdown">
            <option selected> Select ...</option>
            <option data-name="Sauvignon Blanc">Sauvignon Blanc</option>
            <option data-name="Chardonnay">Chardonnay</option>
            <option data-name="Pinot Noir">Pinot Noir</option>
            <option data-name="Red Blend">Red Blend</option>
            <option data-name="Zinfandel">Zinfandel</option>
            <option data-name="Merlot">Merlot</option>
            <option data-name="Cabernet">Cabernet</option>
          </select>
        </div>

        <div>
          Labels To Add:<br>
          <input type="text" id="labelsAdded" value="">
        </div>

        <div>
          Promised:<br>
          <input type="text" id="quantPromised" value="0">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="addNewWine" class="btn btn-primary" data-dismiss="modal">Add Wine</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal to place order -->
<div class="modal fade" id="placeOrderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Place Order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="wi">
          Account Name<br>
          <input type="text" id="salesAccountName" value="">
        </div>
        <div class="wi">
          Vintage:<br>
          <input type="text" id="salesVintage" value="">
        </div>

        <div class="wi">
          Varietal:<br>
          <select class="newSale" id="salesVarietalDropdown">
            <option selected> Select ...</option>
            <option data-name="Sauvignon Blanc">Sauvignon Blanc</option>
            <option data-name="Chardonnay">Chardonnay</option>
            <option data-name="Pinot Noir">Pinot Noir</option>
            <option data-name="Red Blend">Red Blend</option>
            <option data-name="Zinfandel">Zinfandel</option>
            <option data-name="Merlot">Merlot</option>
            <option data-name="Cabernet">Cabernet</option>
          </select>
        </div>

        <div class="wi">
          Quantity:<br>
          <input type="text" id="salesQuantity" value="">
        </div>

        <div class="wi">
          <select id="actualPromise">
            <option data-name="actualOrderd">Actual</option>
            <option data-name="promised">Promised</option>

          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="newSale" class="btn btn-primary" data-dismiss="modal">Place Order</button>
      </div>
    </div>
  </div>
</div>

